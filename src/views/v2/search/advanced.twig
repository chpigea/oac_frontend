{% extends "/v2/layout.twig" %}

{% block extendHead %}

    <!-- YASGUI CSS -->
    <!-- link href="https://unpkg.com/@triply/yasgui/build/yasgui.min.css" rel="stylesheet" type="text/css" / -->

    <link rel="stylesheet" href="/frontend/css/yasgui.min.css" />

    <!-- Font Awesome -->    
    <link rel="stylesheet" href="/frontend/css/fa/css/all.min.css" />

    <!-- Sparnatural CSS -->
    <link rel="stylesheet" href="/frontend/css/sparnatural.css">
    

{% endblock %}

{% block content %}

    
    <div class="container" style="margin-top:1rem!important; margin-bottom:1rem!important;">
      <div class="col-lg-12 px-0">
        
        <!-- uncomment to enable links to load sample queries
        <p>
          Load example queries :
          <a href="#" onclick="document.querySelector('spar-natural').loadQuery(window['example_1']);return false;">example 1</a>
          |
          <a href="#" onclick="document.querySelector('spar-natural').loadQuery(window['example_2']);return false;">example 2</a>
        </p>
        -->

        <!-- The sparnatural web component with config attributes. -->
        <!-- See http://docs.sparnatural.eu/Javascript-integration.html#html-attributes-reference -->
        <spar-natural 
            src="/backend/ontology/schema/{{schema}}"
            endpoint="/backend/fuseki/endpoint/sparql"
            lang="en"
            defaultLang="en"
            distinct="true"
            limit="1000"
            debug="true"
        ></spar-natural>
        
        <!-- ModalitÃ  risultati -->
        <div class="mt-3 mb-2">
          <label class="me-3">
            <input type="radio" name="viewMode" value="direct" checked>
            Oggetto RDF
          </label>
          <label>
            <input type="radio" name="viewMode" value="indagine">
            Scheda indagine
          </label>
        </div>

        <span class="btn btn-primary" id="sparql-toggle">Toggle SPARQL query</span>

      </div>
    </div>

    <!-- raw SPARQL query editor, yasQE -->
    <!-- see https://triply.cc/docs/yasgui/ -->
    <div class="container my-5">
      <div id="yasqe" style="display:none; " />
    </div>

    <!-- SPARQL query results display, yasR -->
    <!-- see https://triply.cc/docs/yasgui/ -->
    <div class="container my-5">
      <div id="yasr">
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="/frontend/js/lib/bootstrap.bundle.min.js"></script>

    <!-- YASGUI JS -->
    <script src="/frontend/js/lib/yasgui.min.js"></script>

    <!-- Sparnatural JS -->
    <script src="/frontend/js/lib/sparnatural.js"></script>

    <!-- Sparnatural Custom YASR plugins -->
    <script src="/frontend/js/lib/sparnatural-yasgui-plugins.js"></script>

    <!-- File containing example queries -->
    <script src="/frontend/js/lib/sparnatural-example-queries.js"></script>
    
    <script src="/frontend/js/lib/sparnatural-tree-select.js"></script>

    <!-- This page custom JS -->
    <script src="/frontend/js/lib/sparnatural-main.js"></script>  


{% endblock %}